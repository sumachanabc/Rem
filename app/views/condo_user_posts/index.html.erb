  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <%= link_to details_condo_path(@condo) do %>
              <%= image_tag 'ビルアイコン6.png', alt: 'マンション情報', class: 'bd-placeholder-img card-img-top top-icon' %>
            <% end %>
            <div class="card-body">
              <p class="card-text">マンション情報</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <%= link_to condo_documents_path(@condo) do %>
              <%= image_tag 'シンプルな書類ファイル.png',alt: '書類', class: 'bd-placeholder-img card-img-top top-icon' %>
            <% end %>
            <div class="card-body">
              <p class="card-text">書類</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <%= link_to new_condo_condo_user_post_path(condo_id: current_condo_user.condo.id) do %>
              <%= image_tag 'テレフォンオペレーター.png', alt: 'お問い合わせはこちら', class: 'bd-placeholder-img card-img-top top-icon' %>
            <% end %>
