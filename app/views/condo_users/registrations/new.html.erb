<h2>Sign up(マンション組合員)</h2>

<%= form_with model: @condo_user, url: condo_user_registration_path, data: { turbo: false }, class: 'registration-main', local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"社員用メールアドレスを入力", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">部屋番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :room_number, class:"input-default", id:"room-number", placeholder:"部屋番号を入力" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :condo_user_last_name, class:"input-name", id:"last-name", placeholder:"例) 田中" %>
      <%= f.text_field :condo_user_first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_field :condo_user_last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) タナカ" %>
      <%= f.text_field :condo_user_first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">住所</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :condo_user_address, class:"input-default", id:"condo-user-address", placeholder:"住所を入力" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :condo_user_phone_number, class:"input-default", id:"condo-user-phone-number", placeholder:"電話番号を入力" %>
  </div>

<div class="form-group">
  <div class="form-text-wrap">
    <%= f.label :condo_id, 'マンションを選択', class: "form-text" %>
    <span class="indispensable">必須</span>
  </div>
  <%= f.select :condo_id, options_for_select(
    @condos_for_select,
    @selected_condo_id),
    { class: "input-default" } %>
</div>

  <div class="actions">
    <%= f.submit "Sign up", data: { turbo: false } %>
  </div>
<% end %>

<%= render "condo_users/shared/links" %>

