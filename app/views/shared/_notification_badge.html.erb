<% if user_signed_in? || condo_user_signed_in? %>
  <%= link_to notifications_path, class: "btn btn-secondary position-relative" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
      <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z"></path>
    </svg>
    <% if @unread_count.to_i > 0 %>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="z-index: 1000; position: relative;">
        <%= @unread_count %>
        <span class="visually-hidden">unread messages</span>
      </span>
    <% end %>
  <% end %>
<% end %>
